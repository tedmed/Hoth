@page "/settings"
@* Injektování ISnackbar není pro vizuál potřeba, můžeme ho smazat nebo zakomentovat. *@
@* @inject ISnackbar Snackbar // Pro jednoduché zobrazení, že nastavení bylo uloženo *@

<MudText Typo="Typo.h4" GutterBottom="true">
    🔔 Nastavení Notifikací
</MudText>

<MudText Typo="Typo.subtitle1" Class="mb-4">
    Zde si můžete nastavit, jaké výstrahy a jakým způsobem chcete dostávat.
</MudText>

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudSelect T="string" Label="Oblast" Value="@("hlavni_mesto_praha")" Required="true" RequiredError="Vyberte prosím oblast.">
            <MudSelectItem Value="@("hlavni_mesto_praha")">Hlavní město Praha</MudSelectItem>
            <MudSelectItem Value="@("Stredocesky_kraj")">Středočeský kraj</MudSelectItem>
            <MudSelectItem Value="@("Plzensky_kraj")">Plzeňský kraj</MudSelectItem>
        </MudSelect>
    </MudItem>

    <MudItem xs="12" sm="6">
        <MudSelect T="string" Label="Typ události" Value="@("Silny_vitr")">
            <MudSelectItem Value="@("Vsechny")">Všechny</MudSelectItem>
            <MudSelectItem Value="@("Silny_vitr")">Silný vítr</MudSelectItem>
            <MudSelectItem Value="@("Sněžení")">Sněžení/Ledovka</MudSelectItem>
        </MudSelect>
    </MudItem>

    <MudItem xs="12" sm="6">
        <MudSelect T="string" Label="Síla hrozby (Severity)" Value="@("Moderate")">
            <MudSelectItem Value="@("Vsechny")">Všechny</MudSelectItem>
            <MudSelectItem Value="@("Minor")">Minor (Mírná)</MudSelectItem>
            <MudSelectItem Value="@("Moderate")">Moderate (Střední)</MudSelectItem>
            <MudSelectItem Value="@("Severe")">Severe (Velká)</MudSelectItem>
        </MudSelect>
    </MudItem>
</MudGrid>

<MudDivider Class="my-6" />

<MudText Typo="Typo.h5" Class="mb-4">
    Způsob upozornění
</MudText>

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudCheckBox T="bool" Checked="true" Color="Color.Primary" Label="Upozornění do aplikace (Bell icon)" />
    </MudItem>

    <MudItem xs="12" sm="6">
        <MudCheckBox T="bool" Checked="false" Color="Color.Secondary" Label="Upozornění emailem" />
    </MudItem>
</MudGrid>

<MudButton Color="Color.Success" Variant="Variant.Filled" Class="mt-6">
    💾 Uložit Nastavení
</MudButton>


@code {
    // Sekce @code je prázdná, takže by neměla způsobovat žádné chyby.
}